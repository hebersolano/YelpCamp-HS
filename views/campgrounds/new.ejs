<% layout('./layouts/boilerplate.ejs') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form class="needs-validation" action="/campgrounds" method="post" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-laber" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="campground[title]" required />
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="campground[location]" required />
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Images</label> <br />
        <input class="form-control" type="file" name="image" id="image" multiple required />
        <!-- <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          required
        />-->
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
            type="number"
            class="form-control"
            id="price"
            name="campground[price]"
            aria-label="Amount (to the nearest dollar)"
            placeholder="0"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          rows="4"
          required
        ></textarea>
      </div>

      <button class="btn btn-success" type="submit">Add CampGround</button>
      <a class="btn btn-secondary" href="/campgrounds">Cancel</a>
    </form>
  </div>
</div>
<script src="/js/validateForms.js"></script>
