<% layout('./layouts/boilerplate.ejs') %>
<!-- map -->
<div class="mb-3">
  <div id="map" style="height: 300px; width: 100%"></div>
  <script>
    const mapBoxToken = "<%-process.env.MAPBOX_TOKEN%>";
    const camps = {features: <%-JSON.stringify(camps)%>};
  </script>
  <script src="/js/mapbox-clusters.js" crossorigin="anonymous"></script>
</div>
<div><a href="campgrounds/new">Add a Campground</a></div>
<h1>All Campgrounds</h1>

<% for (const camp of camps) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img
        src="<%=camp.image[0] ? camp.image[0].path : '';%>"
        alt="campground image"
        class="img-fluid"
        style="aspect-ratio: 5/3; width: 100%"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %></small>
        </p>
        <a class="btn btn-primary" href="campgrounds/<%=camp._id%>" role="button">View <%= camp.title %></a>
      </div>
    </div>
  </div>
</div>
<% } %>
