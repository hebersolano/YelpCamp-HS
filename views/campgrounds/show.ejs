<% layout('./layouts/boilerplate.ejs') %>
  <div class="row mb-5">
    <div class="col-6">
      <div class="card">
        <img src="<%= camp.image %>" class="card-img-top" alt="campground image"
          style="width: 100%; aspect-ratio: 5/3; object-fit: cover" />
        <div class="card-body">
          <h5 class="card-title">
            <%=camp.title %>
          </h5>
          <p class="card-text">
            <%=camp.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted">
            Location: <%=camp.location %>
          </li>
          <li class="list-group-item text-muted">
            Author: <%=camp.author.username %>
          </li>
          <li class="list-group-item text-muted">Price: $<%=camp.price %>
          </li>
          <%  if(String(thisUser._id) === String(camp.author._id)){ %>
          <li class="list-group-item text-muted">
            <a class="btn btn-success" href="/campgrounds/<%=camp._id%>/edit">Edit Campground</a>
            <form class="d-inline" action="/campgrounds/<%=camp._id%>?_method=DELETE" method="post">
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
    <div class="col-6">
      <!-- for reviews -->
      <form class="needs-validation mb-3" action="/campgrounds/<%=camp._id%>/reviews" method="post" novalidate>
        <h2>Leave a review</h2>
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating" />
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review</label>
          <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>

      <!-- show reviews -->
      <div class="mb-3">
        <!-- flash message -->
        <% if (flashState.place=='comments' ) { %> <%- include('../partials/flash.ejs')%>
            <% } %>

              <!--  -->
              <% if (camp.reviews.length> 0) { %> <% for (const review of camp.reviews) { %>
                  <div class="card mb-1">
                    <div class="card-body">
                      <h5 class="card-title">Rating: <%= review.rating %>
                      </h5>
                      <p class="card-text">Review: <%= review.body %>
                      </p>
                      <form action="/campgrounds/<%=camp._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
                        <button class="btn-close btn-sm p-2" type="submit"></button>
                      </form>
                    </div>
                  </div>
                  <% } %>
                    <% } %>
      </div>
    </div>
  </div>
  <script src="/js/validateForms.js"></script>